<system> 

	<!-- in this directory, all plugins & xml files are searched by default -->
	<default_directory> D:\\cadet\\trunk\\_2RealFramework\\kernel\\samples\\testplugins\\bin\\</default_directory>
	<logfile>XMLTest.txt</logfile>
	
	<plugin_list>
		<plugin>
			<!-- names for plugins & graphs have to be unique -->
			<name>kinect_plugin</name>
			<classname>MultiKinectOpenNI</classname>
			<parameter_list>
				<parameter>
					<name>generator_flags</name>
					<!-- for std::containers (curr: std::vector, std::list), ', ' is used to separate elements -->
					<value>color, depth, user colored</value>
				</parameter>
				<parameter>
					<name>image_flags</name>
					<value>color640X480, color640X480, mirrored</value>
				</parameter>
				<parameter>
					<name>logfile</name>
					<value>kinectwrapper.txt</value>
				</parameter>
				<parameter>
					<name>loglevel</name>
					<value>info</value>
				</parameter>
			</parameter_list>
		</plugin>
		<plugin>
			<name>image_processing_plugin</name>
			<classname>ImageProcessing</classname>
			<parameter_list>
				<parameter>
					<name>logfile</name>
					<value>imgprocessing.txt</value>
				</parameter>
			</parameter_list>
		</plugin>
	</plugin_list>
	
	<graph_list>
		<graph type="sequence">
			<name>test_sequence</name>
			<fps>30.0f</fps>
			<graph_list>
				<graph type="service">
					<name>color_image</name>
					<!-- fps are actually irrelevant for all graphs which are not top-level -->
					<fps>30.0f</fps>
					<plugin>kinect_plugin</plugin>
					<service>Image_Generator</service>
					<parameter_list>
						<parameter>
							<name>device id</name>
							<value>0</value>
						</parameter>
						<parameter>
							<name>image_type</name>
							<value>color</value>
						</parameter>
					</parameter_list>
				</graph>
				<graph type="service">
					<name>accum</name>
					<fps>30.0f</fps>
					<plugin>image_processing_plugin</plugin>
					<service>ImageAccumulation_uchar</service>
					<parameter_list>
						<parameter>
							<name>buffer_size</name>
							<value>10</value>
						</parameter>
					</parameter_list>
				</graph>
			</graph_list>
			<!-- optional: redefinitions of child params / ioslots -->
			<setup_list>
				<setup_param>
					<!-- new name -->
					<name></name>
					<!-- this could theoretically still be different from the service -->
					<owner></owner>
					<!-- name under which this param is known by the owner -->
					<slot></slot>
				</setup_param>
			</setup_list>
			<input_list>
				<input_slot>
					<name></name>
					<owner></owner>
					<slot></slot>
				</input_slot>
			</input_list>
			<output_list>
				<output_slot>
					<name></name>
					<owner></owner>
					<slot></slot>
				</output_slot>
			</output_list>
		</graph>
	</graph_list>

	<link_list>
		<link>
			<in>
				<graph>test_sequence:accum</graph>
				<slot>input_image</slot>
			</in>
			<out>
				<graph>test_sequence:color_image</graph>
				<slot>output_image</slot>
			</out>
		</link>
	</link_list>		
			
</system>